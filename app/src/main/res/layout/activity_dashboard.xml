<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".dashboard">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/liner">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:src="@drawable/slider" />

    <!---Rides & Delivery-->
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
    android:layout_marginTop="20dp"
    android:layout_gravity="center"
    >


        <androidx.cardview.widget.CardView
            android:id="@+id/card_ride"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:padding="15dp"
            app:cardBackgroundColor="@color/color"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:src="@drawable/car" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="Rides"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"

                />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_deliver"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:padding="15dp"
            app:cardBackgroundColor="@color/color"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                android:src="@drawable/truck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="Deliver"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"

                />

        </androidx.cardview.widget.CardView>


</LinearLayout>





    <!--Shop & Service-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/card_shop"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:padding="15dp"
            app:cardBackgroundColor="@color/color"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="34dp"
                android:src="@drawable/shop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="Shop"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"

                />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_service"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:padding="15dp"
            app:cardBackgroundColor="@color/color"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="35dp"
                android:src="@drawable/services" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="Service"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>




    <!--Career & Buy sell-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/card_career"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:padding="15dp"
            app:cardBackgroundColor="@color/color"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="35dp"
                android:src="@drawable/businessman" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="Career"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_buyandsale"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:padding="15dp"
            app:cardBackgroundColor="@color/color"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="33dp"
                android:src="@drawable/sell" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="Buy and Sell"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>




</LinearLayout>

</ScrollView>